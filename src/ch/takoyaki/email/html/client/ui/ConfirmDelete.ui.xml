<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
 <ui:style>
  .important {
   font-weight: bold;
  }
 </ui:style>

 <g:HTMLPanel styleName="confirmDelete">
  <g:DialogBox ui:field="dialog">
   <g:caption>Confirm delete</g:caption>
   <g:HTMLPanel>
    <g:VerticalPanel>

     <g:Label text="Permanently delete files?" />
     <g:HorizontalPanel horizontalAlignment="ALIGN_CENTER" spacing="5">
      <g:Button ui:field="yes" title="Yes">Yes</g:Button>
      <g:Button ui:field="cancel" title="Cancel">Cancel</g:Button>
     </g:HorizontalPanel>
    </g:VerticalPanel>
   </g:HTMLPanel>
  </g:DialogBox>
 </g:HTMLPanel>
</ui:UiBinder> 